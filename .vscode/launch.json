{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "üöÄ Launch Full Stack Dev",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "npm: install", // Executa 'npm install' antes de iniciar
      "postDebugTask": "killAllTerminals", // Limpa os terminais ap√≥s debug
      "serverReadyAction": {
        "pattern": "Server running on (http://localhost:([0-9]+))",
        "uriFormat": "%s", // Abre a URL raiz
        "action": "debugWithChrome", // Usa o debugger do Chrome para frontend
        "webRoot": "${workspaceFolder}/frontend"
      },
      "outputCapture": "std",
      "internalConsoleOptions": "neverOpen", // Mant√©m o console limpo
      "autoAttachChildProcesses": true, // Monitora processos filhos
      "timeout": 30000, // Tempo aumentado para inicializa√ß√£o
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "express:*" // Habilita logs detalhados do Express
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "üåê Attach to Frontend",
      "port": 9222,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ],
  "compounds": [
    {
      "name": "üîß Full Stack Debug",
      "configurations": ["üöÄ Launch Full Stack Dev", "üåê Attach to Frontend"],
      "stopAll": true // Para todos os processos quando parar o debug
    }
  ]
}